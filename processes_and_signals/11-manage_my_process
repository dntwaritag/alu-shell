#!/usr/bin/env bash
# Bash script to manage manage_my_process

PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="/path/to/manage_my_process"  # Replace with the actual path

start_process() {
  $PROCESS_SCRIPT &
  echo $! > "$PID_FILE"
  echo "manage_my_process started"
}

stop_process() {
  if [[ -f "$PID_FILE" ]]; then
    kill "$(cat "$PID_FILE")"
    rm "$PID_FILE"
    echo "manage_my_process stopped"
  else
    echo "manage_my_process is not running"
  fi
}

restart_process() {
  stop_process
  start_process
  echo "manage_my_process restarted"
}

case "$1" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    restart_process
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

